{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@workflow-manager/shared": [
        "apps/workflow-manager-frontend/src/app/modules/shared"
      ],
      "@workflow-manager-frontend/shared": ["libs/shared/src/index.ts"],
      "@workflow-manager-frontend/management/products": [
        "libs/management/products/src/index.ts"
      ],
      "@workflow-manager-frontend/management/core": [
        "libs/management/core/src/index.ts"
      ]
    },
    "rootDir": "."
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
